<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.registraduria.votacion" level="ERROR" additivity="false">
    <appender-ref ref="STDOUT" />
  </logger>

  <logger name="com.registraduria.votacion.estacion.ui.VotacionUI" level="INFO" additivity="false">
      <appender-ref ref="STDOUT" />
  </logger>


  <root level="WARN">
    <appender-ref ref="STDOUT" />
  </root>

</configuration> 